<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="651.0" prefWidth="950.0"
            style="-fx-background-image: url('https://cdn.pixabay.com/animation/2023/01/24/23/10/23-10-04-56_512.gif');-fx-background-size: 950 650"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.nasa.SearchController">
    <children>
        <TextField fx:id="searchField" layoutX="249.0" layoutY="134.0" prefHeight="30.0" prefWidth="400.0"/>
        <Label layoutX="150.0" layoutY="134.0" prefHeight="30.0" prefWidth="75.0" text="Search:" textFill="WHITE">
            <font>
                <Font size="20.0"/>
            </font>
        </Label>

        <Label fx:id="nameLabel" layoutX="112.0" layoutY="330.0" prefHeight="39.0" prefWidth="340.0" text="Star Name "
               textFill="WHITE">
            <font>
                <Font name="Space Mono Regular" size="20.0"/>
            </font>
        </Label>
        <Label fx:id="apparentMagnitudeLabel" layoutX="112.0" layoutY="382.0" prefHeight="40.0" prefWidth="340.0"
               text="Apparent Mangnitude" textFill="WHITE">
            <font>
                <Font name="Space Mono Regular" size="20.0"/>
            </font>
        </Label>
        <Label fx:id="absoluteMagnitudeLabel" layoutX="112.0" layoutY="422.0" prefHeight="48.0" prefWidth="340.0"
               text="Absolute Magnitude" textFill="WHITE">
            <font>
                <Font name="Space Mono Regular" size="20.0"/>
            </font>
        </Label>
        <Label fx:id="distanceLightYearLabel" layoutX="500.0" layoutY="326.0" prefHeight="48.0" prefWidth="392.0"
               text="Distance" textFill="WHITE">
            <font>
                <Font name="Space Mono Regular" size="20.0"/>
            </font>
        </Label>
        <Label fx:id="spectralClassLabel" layoutX="500.0" layoutY="378.0" prefHeight="48.0" prefWidth="392.0"
               text="Spectra Class" textFill="WHITE">
            <font>
                <Font name="Space Mono Regular" size="20.0"/>
            </font>
        </Label>

        <Button layoutX="474.0" layoutY="185.0" onAction="#handleSearchButton" prefHeight="40.0" prefWidth="128.0"
                style="-fx-background-color: #272F40;" text="Search" textFill="WHITE">
            <font>
                <Font name="Space Mono Regular" size="18.0"/>
            </font>
        </Button>
        <Button layoutX="291.0" layoutY="186.0" onAction="#returnToHomeScreen" prefHeight="39.0" prefWidth="158.0"
                style="-fx-background-color: #272F40;" text="Back to Home" textFill="WHITE">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
        <Label layoutX="112.0" layoutY="29.0" prefHeight="41.0" prefWidth="792.0"
               text="Search your desired Star and Clustral Structure" textFill="WHITE">
            <font>
                <Font name="Space Mono Regular" size="27.0"/>
            </font>
        </Label>
        <Label layoutX="363.0" layoutY="273.0" prefHeight="39.0" prefWidth="165.0" text="DATA Fetched" textFill="WHITE">
            <font>
                <Font name="Consolas" size="24.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
